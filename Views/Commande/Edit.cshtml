            <label asp-for="DateCommande" class="control-label"></label>
            <input asp-for="DateCommande" class="form-control" />
            <span asp-validation-for="DateCommande" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PrixTotal" class="control-label"></label>
            <input asp-for="PrixTotal" class="form-control" />
            <span asp-validation-for="PrixTotal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CLientId" class="control-label"></label>
            <select asp-for="CLientId" class="form-control" asp-items="ViewBag.CLientId"></select>
            <span asp-validation-for="CLientId" class="text-danger"></span>
        </div>

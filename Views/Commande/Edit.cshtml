            <label class="form-check-label">
                <input class="form-check-input" asp-for="hasPayed" /> @Html.DisplayNameFor(model =>
                model.hasPayed)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Taken" /> @Html.DisplayNameFor(model => model.Taken)
            </label>
        </div>

@model gestioncommande.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inscription</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gestioncommande.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css">
</head>

<body class="bg-[#D46F4D]/5 p-12 flex items-center justify-center min-h-screen">
    <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-2xl">
        <h1 class="text-3xl font-bold text-[#D46F4D] text-center mb-8">Créer un compte</h1>

        <form asp-action="Create" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Nom" class="block text-gray-700 text-sm font-medium mb-2">Nom</label>
                    <input asp-for="Nom"
                        class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]" />
                    <span asp-validation-for="Nom" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="Prenom" class="block text-gray-700 text-sm font-medium mb-2">Prénom</label>
                    <input asp-for="Prenom"
                        class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]" />
                    <span asp-validation-for="Prenom" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="telephone" class="block text-gray-700 text-sm font-medium mb-2">Téléphone</label>
                    <input asp-for="telephone" type="tel"
                        class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]" />
                    <span asp-validation-for="telephone" class="text-red-500 text-sm mt-1"></span>
                </div>


                <div>
                    <label asp-for="Login" class="block text-gray-700 text-sm font-medium mb-2">Adresse e-mail</label>
                    <input asp-for="Login" type="email"
                        class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]" />
                    <span asp-validation-for="Login" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-gray-700 text-sm font-medium mb-2">Mot de passe</label>
                    <input asp-for="Password" type="password"
                        class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-medium mb-2">Confirmer le
                        mot de passe</label>
                    <input asp-for="ConfirmPassword" type="password"
                        class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>

            <div class="flex flex-col md:flex-row items-center justify-between pt-4">
                <button type="submit"
                    class="bg-[#D46F4D] text-white px-8 py-3 rounded-lg hover:bg-[#D46F4D]/90 transition duration-200 w-full md:w-auto mb-4 md:mb-0">
                    Créer un compte
                </button>
                <a href="~/Connexion/Login" class="text-[#D46F4D] hover:text-[#D46F4D]/80 font-medium">
                    Déjà un compte ? Se connecter
                </a>
            </div>
        </form>
    </div>
</body>

</html>

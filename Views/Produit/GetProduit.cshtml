@model gestioncommande.Models.Produit
<div class="max-w-5xl mx-auto px-4 py-8 ">
    <div class="bg-white rounded-lg shadow-lg">
        <div class="grid md:grid-cols-2 gap-8 p-6">
            <!-- Images Section -->
            <div class="space-y-4">
                <div class="aspect-square rounded-lg overflow-hidden">
                    <img src="@Model.FileName" alt="Produit principal" class="w-auto h-auto object-cover">
                </div>
                @* <div class="grid grid-cols-4 gap-2">
                    <div
                        class="aspect-square rounded-lg overflow-hidden border-2 hover:border-[#D46F4D] cursor-pointer transition-colors">
                        <img src="chemin/vers/miniature1.jpg" alt="Vue 1" class="w-full h-full object-cover">
                    </div>
                    <div
                        class="aspect-square rounded-lg overflow-hidden border-2 hover:border-[#D46F4D] cursor-pointer transition-colors">
                        <img src="chemin/vers/miniature2.jpg" alt="Vue 2" class="w-full h-full object-cover">
                    </div>
                    <div
                        class="aspect-square rounded-lg overflow-hidden border-2 hover:border-[#D46F4D] cursor-pointer transition-colors">
                        <img src="chemin/vers/miniature3.jpg" alt="Vue 3" class="w-full h-full object-cover">
                    </div>
                    <div
                        class="aspect-square rounded-lg overflow-hidden border-2 hover:border-[#D46F4D] cursor-pointer transition-colors">
                        <img src="chemin/vers/miniature4.jpg" alt="Vue 4" class="w-full h-full object-cover">
                    </div>
                </div> *@
            </div>

            <!-- Product Info Section -->
            <div class="space-y-6">
                <div class="space-y-2">
                    <h1 class="text-3xl font-bold text-gray-800">@Model.Libelle</h1>
                    <p class="text-sm text-gray-500">Référence: BB-2024-001</p>
                </div>

                <div class="space-y-2">
                    <p class="text-3xl font-bold text-[#D46F4D]">@Model.Prix $</p>
                    <p class="text-sm text-gray-500">TVA incluse</p>
                </div>

                <div class="space-y-4">
                    <h2 class="text-xl font-semibold text-gray-800">Description</h2>
                    <p class="text-gray-600 leading-relaxed">
                        Vêtement bébé de haute qualité, fabriqué avec des matériaux doux et confortables.
                        Parfait pour toutes les saisons, facile à entretenir et durable.
                    </p>
                </div>

                <div class="space-y-4">
                    <h2 class="text-xl font-semibold text-gray-800">Caractéristiques</h2>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="bg-gray-50 p-3 rounded-lg">
                            <p class="text-gray-500 text-sm">Matière</p>
                            <p class="text-gray-800 font-medium">100% Coton Bio</p>
                        </div>
                        <div class="bg-gray-50 p-3 rounded-lg">
                            <p class="text-gray-500 text-sm">Taille</p>
                            <p class="text-gray-800 font-medium">3-6 mois</p>
                        </div>
                        <div class="bg-gray-50 p-3 rounded-lg">
                            <p class="text-gray-500 text-sm">Couleur</p>
                            <p class="text-gray-800 font-medium">Blanc</p>
                        </div>
                        <div class="bg-gray-50 p-3 rounded-lg">
                            <p class="text-gray-500 text-sm">Lavage</p>
                            <p class="text-gray-800 font-medium">30°C</p>
                        </div>
                    </div>
                </div>

                <div class="pt-6 space-y-4">
                    <div class="flex items-center space-x-4">

                        @if (User.IsInRole("CLIENT") == true)
                        {
                            <button type="button" onclick="addToCartjs(event, @Model.Id)"
                                class="flex-1 bg-[#D46F4D] text-white px-8 py-3 rounded-lg hover:bg-[#D46F4D]/90 transition-colors flex items-center justify-center space-x-2">
                                <!-- Icône panier en SVG -->
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                <span class="font-medium">Ajouter au panier</span>
                            </button>
                        }
                        @if (User.IsInRole("RS"))
                        {
                            <div class="pt-6 flex flex-wrap gap-1">
                                <!-- Bouton Voir Détails -->
                                <button>
                                    <a asp-controller="Produit" asp-action="Details" asp-route-id="@Model.Id"
                                        class="flex items-center justify-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors space-x-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                        <span>Voir Détails</span>
                                    </a>

                                </button>

                                <!-- Bouton Modifier -->
                                <button>
                                    <a asp-controller="Produit" asp-action="Edit" asp-route-id="@Model.Id" class="flex items-center justify-center px-6 py-3 bg-[#D46F4D] text-white rounded-lg
                                    hover:bg-orange1 transition-colors space-x-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        <span>Modifier</span></a>

                                </button>

                                <!-- Bouton Supprimer -->
                                <button>
                                    <a asp-controller="Produit" asp-action="Delete" asp-route-id="@Model.Id"
                                        class="flex items-center justify-center px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors space-x-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        <span>Supprimer</span></a>

                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Produit.js"></script>
@model gestioncommande.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gestioncommande.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css">
    <!-- Ajout de Font Awesome pour les icônes -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-gradient-to-br from-orange-50 to-orange-100 flex items-center justify-center min-h-screen p-4">
    <div class="flex flex-col sm:flex-row gap-8 bg-white p-8 rounded-2xl shadow-xl max-w-4xl w-full mx-auto">
        <!-- Section Logo -->
        <div class="w-52 h-56 rounded-2xl overflow-hidden shadow-lg mx-auto sm:mx-0">
            <img src="~/image/MyLogo.png" alt="Login image"
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" />
        </div>

        <!-- Section Formulaire -->
        <div class="flex-1 max-w-md mx-auto w-full">
            <form asp-controller="Connexion" asp-action="Login" method="post" class="space-y-6">
                <h1 class="text-3xl font-bold text-darkinti mb-8 text-center sm:text-left">
                    Bienvenue
                    <span class="block text-lg text-gray-600 font-normal mt-2">Connectez-vous à votre compte</span>
                </h1>

                <!-- Email -->
                <div class="space-y-2">
                    <label class="text-gray-700 text-sm font-medium block">Adresse e-mail</label>
                    <div class="relative group">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-darkinti transition-colors duration-200"
                            width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <rect width="20" height="16" x="2" y="4" rx="2" />
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                        </svg>
                        <input type="text" asp-for="Login" placeholder="Entrez votre mail"
                            class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-darkinti focus:ring-2 focus:ring-darkinti/20 transition-all duration-200">
                    </div>
                </div>

                <!-- Mot de passe -->
                <div class="space-y-2">
                    <label class="text-gray-700 text-sm font-medium block">Mot de passe</label>
                    <div class="relative group">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-darkinti transition-colors duration-200"
                            width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <circle cx="12" cy="16" r="1" />
                            <rect x="3" y="10" width="18" height="12" rx="2" />
                            <path d="M7 10V7a5 5 0 0 1 10 0v3" />
                        </svg>
                        <input type="password" asp-for="Password" placeholder="Entrez votre mot de passe"
                            class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-darkinti focus:ring-2 focus:ring-darkinti/20 transition-all duration-200">
                    </div>
                </div>

                <!-- Message d'erreur -->
                @if (ViewData["ValidateMessage"] != null)
                {
                    <div class="text-red-500 text-sm bg-red-50 p-3 rounded-lg">
                        <label>@ViewData["ValidateMessage"]</label>
                    </div>
                }

                <!-- Bouton de connexion -->
                <button type="submit"
                    class="w-full bg-darkinti text-white py-3 rounded-lg hover:bg-darkinti/90 transition duration-200 transform hover:scale-[1.02] focus:ring-2 focus:ring-darkinti/50 shadow-lg">
                    Se connecter
                </button>

                <!-- Séparateur -->
                <div class="relative my-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 text-gray-500 bg-white">Ou continuer avec</span>
                    </div>
                </div>

                <!-- Boutons réseaux sociaux -->
                <div class="grid grid-cols-3 gap-4">
                    <a href="#"
                        class="flex items-center justify-center px-4 py-2 border border-gray-200 rounded-lg hover:bg-gray-50 transition duration-200">
                        <i class="fab fa-google text-red-500 text-xl"></i>
                    </a>
                    <a href="#"
                        class="flex items-center justify-center px-4 py-2 border border-gray-200 rounded-lg hover:bg-gray-50 transition duration-200">
                        <i class="fab fa-facebook text-blue-600 text-xl"></i>
                    </a>
                    <a href="#"
                        class="flex items-center justify-center px-4 py-2 border border-gray-200 rounded-lg hover:bg-gray-50 transition duration-200">
                        <i class="fab fa-instagram text-pink-600 text-xl"></i>
                    </a>
                </div>

                <!-- Lien création de compte -->
                <div class="text-center text-sm mt-6">
                    <span class="text-gray-600">Pas encore de compte ? </span>
                    <a href="~/UserDto/Create" class="text-darkinti hover:underline font-medium">Créer un compte</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
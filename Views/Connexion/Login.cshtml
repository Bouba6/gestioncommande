@model gestioncommande.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gestioncommande.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css">
</head>

<body class="bg-[#D46F4D]/10 flex items-center justify-center h-screen">
    <div class="flex flex-col sm:flex-row gap-8 bg-white  p-8 rounded-2xl shadow-lg">
        <div class="w-52 h-56 rounded-2xl overflow-hidden shadow-md">
            <img src="~/image/image.png" alt="Login image" class="w-full h-full object-cover" />
        </div>

        <div class="w-96">
            <form asp-controller="Connexion" asp-action="Login" method="post" class="space-y-6">
                <h1 class="text-2xl font-bold text-[#D46F4D] mb-8">Login Account</h1>

                <div class="space-y-2">
                    <label class="text-gray-700 text-sm font-medium">Adresse e-mail</label>
                    <div class="relative">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" width="20" height="20"
                            viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect width="20" height="16" x="2" y="4" rx="2" />
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                        </svg>
                        <input type="text" asp-for="Login" placeholder="Entrez votre mail"
                            class="w-full pl-10 pr-4 py-2 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]">
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-gray-700 text-sm font-medium">Mot de passe</label>
                    <div class="relative">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" width="20" height="20"
                            viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="16" r="1" />
                            <rect x="3" y="10" width="18" height="12" rx="2" />
                            <path d="M7 10V7a5 5 0 0 1 10 0v3" />
                        </svg>
                        <input type="password" asp-for="Password" placeholder="Entrez votre mot de passe"
                            class="w-full pl-10 pr-4 py-2 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]">
                    </div>
                </div>

                @if (ViewData["ValidateMessage"] != null)
                {
                    <div class="text-red-500 text-sm">
                        <label>@ViewData["ValidateMessage"]</label>
                    </div>
                }

                <button type="submit"
                    class="w-full bg-[#D46F4D] text-white py-3 rounded-lg hover:bg-[#D46F4D]/90 transition duration-200">
                    Se connecter
                </button>

                <div class="text-center text-sm">
                    <span class="text-gray-600">Pas encore de compte ? </span>
                    <a href="~/UserDto/Create" class="text-[#D46F4D] hover:underline">Cr√©er un compte</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>

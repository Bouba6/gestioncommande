@model gestioncommande.Models.UserDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inscraption</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gestioncommande.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css">
</head>

<body class="bg-gradient-to-br from-[#D46F4D]/5 to-orange-50 p-4 sm:p-8 flex items-center justify-center min-h-screen">
    <div class="bg-white shadow-xl rounded-2xl p-6 sm:p-10 w-full max-w-3xl">
        <!-- En-tête avec icône -->
        <div class="text-center mb-10">
            <div class="inline-block p-3 rounded-full bg-[#D46F4D]/10 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-[#D46F4D]" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-800">Créer un compte</h1>
            <p class="text-gray-500 mt-2">Rejoignez-nous pour une expérience exceptionnelle</p>
        </div>

        <form asp-action="Create" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <!-- Informations personnelles -->
            <div class="grid grid-cols-2 gap-6">
                <!-- Nom -->
                <div class="relative">
                    <label asp-for="Nom" class="block text-gray-700 text-sm font-medium mb-2">Nom</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </span>
                        <input asp-for="Nom"
                            class="w-full pl-10 pr-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]"
                            placeholder="Votre nom" />
                    </div>
                    <span asp-validation-for="Nom" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Prénom -->
                <div class="relative">
                    <label asp-for="Prenom" class="block text-gray-700 text-sm font-medium mb-2">Prénom</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </span>
                        <input asp-for="Prenom"
                            class="w-full pl-10 pr-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]"
                            placeholder="Votre prénom" />
                    </div>
                    <span asp-validation-for="Prenom" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Email -->
                <div class="relative">
                    <label asp-for="Login" class="block text-gray-700 text-sm font-medium mb-2">Email</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </span>
                        <input asp-for="Login" type="email"
                            class="w-full pl-10 pr-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]"
                            placeholder="votre@email.com" />
                    </div>
                    <span asp-validation-for="Login" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Téléphone -->
                <div class="relative">
                    <label asp-for="telephone" class="block text-gray-700 text-sm font-medium mb-2">Téléphone</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                        </span>
                        <input asp-for="telephone" type="tel"
                            class="w-full pl-10 pr-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]"
                            placeholder="+33 6 XX XX XX XX" />
                    </div>
                    <span asp-validation-for="telephone" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Adresse -->
                <div class="relative md:col-span-2">
                    <label asp-for="Adresse" class="block text-gray-700 text-sm font-medium mb-2">Adresse</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </span>
                        <input asp-for="Adresse"
                            class="w-full pl-10 pr-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]"
                            placeholder="Votre adresse complète" />
                    </div>
                    <span asp-validation-for="Adresse" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Mot de passe -->
                <div class="relative">
                    <label asp-for="Password" class="block text-gray-700 text-sm font-medium mb-2">Mot de passe</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                        </span>
                        <input asp-for="Password" type="password"
                            class="w-full pl-10 pr-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]"
                            placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Confirmer mot de passe -->
                <div class="relative">
                    <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-medium mb-2">Confirmer le
                        mot de passe</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                        </span>
                        <input asp-for="ConfirmPassword" type="password"
                            class="w-full pl-10 pr-4 py-2.5 border border-gray-200 rounded-lg focus:outline-none focus:border-[#D46F4D] focus:ring-1 focus:ring-[#D46F4D]"
                            placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>

            <!-- Boutons d'action -->
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-6">
                <button type="submit"
                    class="w-full sm:w-auto bg-[#D46F4D] text-white px-8 py-3 rounded-lg hover:bg-[#D46F4D]/90 transition duration-200 flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                    </svg>
                    Créer un compte
                </button>
                <a href="~/Connexion/Login"
                    class="text-[#D46F4D] hover:text-[#D46F4D]/80 font-medium flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                    </svg>
                    Déjà un compte ? Se connecter
                </a>
            </div>
        </form>
    </div>
</body>
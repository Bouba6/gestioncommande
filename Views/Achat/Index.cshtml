<main class="pt-2 sm:ml-40 overflow-hidden">
    <h1 class="relative text-xl sm:text-4xl font-bold text-start mb-4 sm:mb-12 text-gray-800">
        <span class="relative inline-block">
            <span class="bg-gradient-to-r from-darkinti via-[#E88B6B] to-darkinti bg-clip-text text-transparent font-bold hover:from-[#E88B6B] hover:to-darkinti transition-all duration-300">
                Votre Panier
            </span>
        </span>
    </h1>

    <form asp-action="Create1" id="form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <div class="relative overflow-x-auto mt-2 sm:mt-4">
            @if (ViewBag.panier != null && ViewBag.panier.detailCommande != null && ViewBag.panier.detailCommande.Count > 0)
            {
                <div class="flex flex-row space-x-1 sm:space-x-12">
                    <!-- Left Column - Cart Items -->
                    <div class="flex flex-col w-[65%] sm:w-2/3 justify-between">
                        @foreach (var item in ViewBag.panier.detailCommande)
                        {
                            <div class="flex flex-col gap-2 sm:gap-4 p-2 sm:p-6 bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 my-2 sm:my-4">
                                <!-- Product Container -->
                                <div class="flex flex-row gap-2 sm:gap-4">
                                    <!-- Image avec dimensions réduites -->
                                    <div class="relative w-14 h-14 sm:w-44 sm:h-44 flex-shrink-0 overflow-hidden rounded-lg">
                                        <img src="@item.produit.FileName" class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-300" alt="">
                                    </div>

                                    <!-- Content -->
                                    <div class="flex-1 flex flex-col min-w-0 justify-between"> 
                                        <div>
                                            <h1 class="text-sm sm:text-xl font-bold text-gray-800 mb-1 sm:mb-2 truncate">@item.produit.Libelle</h1>
                                            <p class="text-gray-600 text-[10px] sm:text-sm mb-2 sm:mb-6 line-clamp-2 sm:line-clamp-none">Un sac qui combine mode et fonctionnalité</p>
                                        </div>

                                        <!-- Controls -->
                                        <div class="flex flex-wrap items-center justify-between gap-1 sm:gap-4">
                                            <div class="text-sm sm:text-lg font-bold text-gray-800">
                                                @item.produit.Prix $
                                            </div>

                                            <!-- Quantity avec taille réduite -->
                                            <div class="flex items-center gap-1 sm:gap-2 bg-gray-50 p-1 sm:p-2 rounded-lg">
                                                <button type="button" class="w-5 h-5 sm:w-8 sm:h-8 flex items-center justify-center text-white bg-orange1 rounded-md hover:bg-darkinti/90 text-xs sm:text-base" onclick="decreaseQuantity(@item.IdTemporaire)">−</button>
                                                <input type="number" name="quantities[@item.IdTemporaire]" id="quantity_@item.IdTemporaire" value="@item.qteCommande" min="1" class="w-6 sm:w-16 h-5 sm:h-8 text-center text-gray-800 bg-transparent border-0 focus:ring-0 text-xs sm:text-base p-0" />
                                                <button type="button" class="w-5 h-5 sm:w-8 sm:h-8 flex items-center justify-center text-white bg-orange1 rounded-md hover:bg-darkinti/90 text-xs sm:text-base" onclick="increaseQuantity(@item.IdTemporaire)">+</button>
                                            </div>

                                            <!-- Delete avec taille très réduite -->
                                            <a asp-action="Deletedetail" asp-route-id="@item.IdTemporaire" class="p-1 sm:p-2 rounded-full hover:bg-red-50 text-red-500 hover:text-red-600">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 sm:w-6 sm:h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="M3 6h18" />
                                                    <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" />
                                                    <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" />
                                                    <line x1="10" x2="10" y1="11" y2="17" />
                                                    <line x1="14" x2="14" y1="11" y2="17" />
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>


                    <div class="h-44 sm:h-96 w-[35%] sm:w-1/3 flex bg-white shadow-lg rounded-md p-2 sm:p-4 flex-col">
                        <h3 class="bg-gradient-to-r from-darkinti via-[#E88B6B] to-darkinti bg-clip-text text-darkinti text-xs sm:text-xl  text-transparent font-bold hover:from-[#E88B6B] hover:to-darkinti transition-all duration-300">Resume du panier</h3>
                        @* <h1 class="bg-gradient-to-r text-xs sm:text-xl sm:text-lg from-darkinti via-[#E88B6B] to-darkinti bg-clip-text text-transparent font-bold hover:from-[#E88B6B] hover:to-darkinti transition-all duration-300">Resume du panier</h3> *@


                        <div id="total"class="font-bold text-darkinti  border-b border-gray-400 py-1 sm:py-6 mb-2 sm:mb-6 text-xs sm:text-base">
                            Sous Total : @ViewBag.panier.PrixTotal.ToString("F2") $
                        </div>
                        

                        <div class="h-full flex flex-col justify-between">
                            <div class="flex flex-col  mb-2 gap-3 sm:gap-6  sm:mb-6">

                                    <div class="flex items-center text-darkinti">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 sm:w-6 sm:h-6 text-green-500 mr-1 sm:mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M10 20h4M12 4v16M12 4l6 6M12 4l-6 6" />
                                        </svg>
                                        <span class="text-[8px] sm:text-sm line-clamp-1 ">Livraison gratuite sur toutes les commandes</span>
                                    </div>

                                    <div class="flex items-center text-darkinti">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 sm:w-6 sm:h-6 text-blue-500 mr-1 sm:mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M12 8v8M8 12h8M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2z" />
                                        </svg>
                                        <span class="text-[8px] sm:text-sm line-clamp-1">Garantie satisfait ou remboursé</span>
                                    </div>

                                    <div class="flex items-center text-darkinti">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 sm:w-6 sm:h-6 text-yellow-500 mr-1 sm:mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M12 18V6M6 12l6 6 6-6" />
                                        </svg>
                                        <span class="text-[8px] sm:text-sm">Support 24/7 disponible</span>
                                    </div>
                            </div>

                            <div class="flex justify-end flex-end">
                                <Button type="submit"
                                    class="bg-orange1 w-full text-or px-1 sm:px-2 py-1 sm:py-3 rounded text-[10px] sm:text-base hover:bg-orange1">Commander</Button>
                            </div>
                        </div>
                    </div>
                </div> 


                @* <div class="h-44 sm:h-96 w-[35%] sm:w-1/3 flex bg-white shadow-lg rounded-md p-2 sm:p-4 flex-col">
                        <h6 class="bg-gradient-to-r text-xs sm:text-lg from-darkinti via-[#E88B6B] to-darkinti bg-clip-text text-transparent font-bold hover:from-[#E88B6B] hover:to-darkinti transition-all duration-300">Resume du panier</h3>
                        <div id="total" class="font-bold text-darkinti  border-b border-gray-400 py-1 sm:py-6 mb-2 sm:mb-6 text-xs sm:text-base">
                            Sous Total :               @ViewBag.panier.PrixTotal.ToString("F2") $
                        </div>

                          




                        <div class="flex flex-col gap-1 sm:gap-4 mb-2 sm:mb-6">
                            <!-- Cart features avec taille très réduite -->
                            <div class="flex items-center text-darkinti">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 sm:w-6 sm:h-6 text-green-500 mr-1 sm:mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M10 20h4M12 4v16M12 4l6 6M12 4l-6 6" />
                                </svg>
                                <span class="text-[8px] sm:text-sm">Livraison gratuite</span>
                            </div>
                            
                            <div class="flex items-center text-darkinti">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 sm:w-6 sm:h-6 text-blue-500 mr-1 sm:mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M12 8v8M8 12h8M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2z" />
                                </svg>
                                <span class="text-[8px] sm:text-sm">Garantie satisfait</span>
                            </div>
                            
                            
                            <div class="flex items-center text-darkinti">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 sm:w-6 sm:h-6 text-yellow-500 mr-1 sm:mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M12 18V6M6 12l6 6 6-6" />
                                </svg>
                                <span class="text-[8px] sm:text-sm">Support 24/7</span>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <Button type="submit" class="bg-orange1 w-full text-or px-1 sm:px-2 py-1 sm:py-3 rounded text-[10px] sm:text-base hover:bg-orange1">Commander</Button>
                        </div>
                </div> *@
                
            }
            else
            {
                <div class="flex flex-col sm:flex-row gap-8 justify-between">
                    <div>
                        <div class="w-auto flex border-l border-darkinti  p-4 flex flex-col">
                            <div class="text-darkinti text-2xl">Votre Panier est vide</div>
                            <h2>
                                <p class="text-gray-700 text-lg">Ajoutez des produits à votre panier pour commencer vos
                                    achats.</p>
                            </h2>
                        </div>
                        <div class="">
                            <button
                                class="mt-8 bg-darkinti text-white font-bold py-4 px-8 rounded-xl hover:hover:bg-darkinti/90 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl">
                                Commencer vos achats
                            </button>
                        </div>
                    </div>

                    <div class="w-auto h-96 flex border-1 bg-white shadow-lg rounded-md p-4 flex flex-col">
                        <h3 class="text-gray-600 text-xl">Resume du panier</h3>
                        <div id="total" class="font-bold text-darkinti  border-b border-gray-400 py-6 mb-6">
                            Sous Total :0.0 $
                        </div>
                        <div class="flex flex-col gap-4 mb-6">

                            <div class="flex items-center text-darkinti">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" class="w-6 h-6 text-green-500 mr-2">
                                    <path d="M10 20h4M12 4v16M12 4l6 6M12 4l-6 6" />
                                </svg>
                                <span class="text-sm">Livraison gratuite sur toutes les commandes</span>
                            </div>

                            <div class="flex items-center text-darkinti">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" class="w-6 h-6 text-blue-500 mr-2">
                                    <path d="M12 8v8M8 12h8M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2z" />
                                </svg>
                                <span class="text-sm">Garantie satisfait ou remboursé</span>
                            </div>

                            <div class="flex items-center text-darkinti">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" class="w-6 h-6 text-yellow-500 mr-2">
                                    <path d="M12 18V6M6 12l6 6 6-6" />
                                </svg>
                                <span class="text-sm">Support client 24/7 disponible</span>
                            </div>
                        </div>

                        <div class="disabled">
                            <Button
                                class="bg-orange1 w-full border-orange1 border-2 text-or px-2 py-3 rounded hover:darkinti-dark hover:text-white"
                                disabled>Commander</Button>
                        </div>
                    </div>

                </div>
            }
    </form>

</main>

<script src="~/js/Achat.js"></script>